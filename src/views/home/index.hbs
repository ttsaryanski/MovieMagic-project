<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">

        <!-- If there are posts for creature in the database display each of them -->
        {{#each movies}}
            {{>movie}}
        {{else}}
            <!-- If there are still no posts in the database display: -->
            <div class="no-posts">
                <p class="no-offer">There are no movies yet...</p>
            </div>
        {{/each}}

    </div>
</section>